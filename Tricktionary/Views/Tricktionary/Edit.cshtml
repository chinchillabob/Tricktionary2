@model Tricktionary.Models.Trick

@{
    ViewBag.Title2 = "Edit";
}

<h2>Edit the Trick with id: @Model.Id</h2>
<form method="post">
    <input asp-for="Id" type="hidden" />


    <label asp-for="Name"></label> <input asp-for="Name" /> <br />
    <label asp-for="Description"></label> <input asp-for="Description" /><br />
    <label asp-for="Image"></label> <select asp-for="Image"></select><br />

    <input type="submit" value="Save changes" />
</form>