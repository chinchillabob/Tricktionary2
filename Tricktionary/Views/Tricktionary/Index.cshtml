@model IEnumerable<Tricktionary.Models.Trick>
@{
    ViewBag.Title2 = "Index";
}
@using Tricktionary.Models
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="/CSS/MyStyle.css" />
</head>
<body>
    @await Html.PartialAsync("/Views/Shared/_Header.cshtml")
    <h1>Rollerblading Tricktionary</h1>
    <h2>List of tricks</h2>
    <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Show more details</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td> @t.Name  </td>
                        <td> <a asp-action="Show" asp-route-id="@t.Id"> details </a>  </td>
                        <td> <a asp-action="Edit" asp-route-id="@t.Id"> edit</a>  </td>
                        <td> <a asp-action="Delete" asp-route-id="@t.Id"> delete</a>  </td>
                        
                    </tr>
                }
  
            </tbody>
        </table>
        <a asp-action="Add">Add new trick</a>
</body>
</html>
